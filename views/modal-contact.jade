input.bag-index(type="image",src="images/bag-icon.png",data-toggle='modal', data-target='#exampleModal')
// Modal
#exampleModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='exampleModalLabel', aria-hidden='true')
  .modal-dialog(role='document')
    .modal-content
      .modal-header
        .closeModal(data-dismiss='modal')
          img(src="images/cancel2.png", alt="close")
      .modal-body
        .modaluser-left
          #contact(style="color:#fff;padding-top:15px")
        .modaluser-right
          ul.nav.nav-tabs
            li.active
              a#menuIt(href='#item') Item
            li
              a#menuFr(href='#friend') Friend
          .tab-content
            #item.tab-pane.fade.scrollbar-lady-lips.in.active.show
              .row#list-item.my-custom-scrollbar.scrollbar-lady-lips
            #friend.tab-pane.fade.scrollbar-lady-lips
              #messAddFr.alert.alert-success.bounceInDown.d-none
              button#btnAddFr.btn.btn-outline-success(type="button") Add Friend
              input#ipFr(type="text", placeholder="Pls input name friend")
              .row#list-friend.my-custom-scrollbar.scrollbar-lady-lips